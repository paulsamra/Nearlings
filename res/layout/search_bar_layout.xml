<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
                android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/search_bar_text_items"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
    
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_bar_search_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/search_icon" >
            </ImageView>

            <TextView
                android:id="@+id/search_bar_search_term"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/search_bar_search_icon"
                android:text="@string/all" />

            <TextView
                android:id="@+id/search_bar_search_location"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="location"
                android:layout_toRightOf="@+id/search_bar_search_term" />

            <ImageView
                android:id="@+id/search_options_filter_results"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/filter_unselected" >
            </ImageView>
        </RelativeLayout>

        <include layout="@layout/search_options_subbar" />
    </LinearLayout>

</merge>