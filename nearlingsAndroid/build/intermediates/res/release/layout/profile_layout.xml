<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dip"
        android:text="Personal Settings"
        android:textSize="24dip" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_form"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_form"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="77dip"
                android:layout_height="77dip" >
            </ImageView>
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px" />

            <TableRow android:background="@color/white" >

                <TextView
                    style="@style/formFieldLabel.searchFormtitle"
                    android:text="First Name" />

                <org.droidparts.widget.ClearableEditText
                    android:id="@+id/first_name_field"
                    style="@style/searchFormField.text"
                    android:hint="First Name" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px" />

            <TableRow android:background="@color/white" >

                <TextView
                    style="@style/formFieldLabel.searchFormtitle"
                    android:text="Last Name" />

                <org.droidparts.widget.ClearableEditText
                    android:id="@+id/last_name_field"
                    style="@style/searchFormField.text"
                    android:hint="Last Name" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="48dip" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_form"
        android:shrinkColumns="0" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px" />

        <TableRow android:background="@color/white" >

            <TextView
                style="@style/formFieldLabel.searchFormtitle"
                android:text="Username" />

            <org.droidparts.widget.ClearableEditText
                android:id="@+id/username_field"
                style="@style/searchFormField.text" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px" />

        <TableRow android:background="@color/white" >

            <TextView
                style="@style/formFieldLabel.searchFormtitle"
                android:text="Email" />

            <org.droidparts.widget.ClearableEditText
                android:id="@+id/email_field"
                style="@style/searchFormField.text"
                android:layout_alignParentRight="true" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px" />

        <TableRow android:background="@color/white" >

            <TextView
                style="@style/formFieldLabel.searchFormtitle"
                android:text="Password" />

            <org.droidparts.widget.ClearableEditText
                android:id="@+id/password_field"
                style="@style/searchFormField.text"
                android:layout_alignParentRight="true"
                android:password="true" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px" />
    </TableLayout>

</LinearLayout><!-- From: file:/Users/Cygnus/AndroidStudioProjects/nearlings-android/nearlingsAndroid/src/main/res/layout/profile_layout.xml -->